{% extends "WbnWebinaireBundle:Membre:membre.html.twig" %}
{% block title %}
	Mes Webinaires
{% endblock %}
{% block body %}
<section>
<div id="subStepTopCorner"></div>
<div id="subStepContainer">
  <div id="liste">
	<ul>
		{% for webis in webi %}
			<li>
				<a href="{{ path('sdzblog_modifierwebi', {'id': webis.id}) }}">{{ webis.nom }}</a>
				créé le : {{ webis.datecreation|date('d/m/Y') }}.
				
			</li>
		{% else %}
			<li>Pas (encore !) d'articles</li>
		{% endfor %}
	</ul>

    <div class="pagination">
    	<ul>
    		{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    		{% for p in range(1, nb_pages) %}
    			<li{% if p == page %} class="active"{% endif %}>
    				<a href="{{ path('webinaire_membre', {'page': p}) }}">{{ p }}</a>
    			</li>
    		{% endfor %}
    	</ul>
      </div>	
    </div>
</div>
<div id="subStepBottomCorner"></div>
</section>
{% endblock %}


